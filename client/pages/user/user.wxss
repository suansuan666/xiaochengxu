.header{
  width:100%;
  height:450rpx;
  background:url(../../images/柠檬.png) center center/cover no-repeat;
  display: flex;
  flex-direction: column;
  background-color: 	#DCDCDC;

}
.box{
  display: flex;
  flex-direction: column;
  padding: 30rpx; 
  
}
.img{
  width:150rpx;
  height:150rpx;
  border-radius: 50%;
 
}
.image{
  display: flex;
  flex-direction: row;
  justify-content: center;
  
}
.name{
   display: flex;
  flex-direction: row;
  justify-content: center;
}
.username{
  height:50rpx;
  line-height: 50rpx;
  margin-top:20rpx;
  font-size:30rpx;
  
}
.navigate{
  height:100rpx;
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  /* margin-left:10rpx; */
}
.navigate navigator{
  padding-left:150rpx;
}
.lable{
  height:70rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 0.5px solid #778899;
}
.treasure{
  font-size: 28rpx;
  height:80rpx;
  line-height: 80rpx;
}
.container{
   display: flex;
   flex-direction: column;
  
}
.footer{

  height:100rpx;
  width: 100%;
}
.picture{
  width:600rpx;
  height:600rpx;
  margin-top: 50rpx;
}
.word,.number{
     font-size: 28rpx; 
}
.concern,.fans,.collected{
  display: flex;
  flex-direction: column;
}